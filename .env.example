# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Database (PostgreSQL recommended for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=${{PGHOST}}
DB_POSTGRESDB_PORT=${{PGPORT}}
DB_POSTGRESDB_DATABASE=${{PGDATABASE}}
DB_POSTGRESDB_USER=${{PGUSER}}
DB_POSTGRESDB_PASSWORD=${{PGPASSWORD}}

# Encryption key (generate a random 32-character string)
N8N_ENCRYPTION_KEY=your-encryption-key-here

# Webhook URL (Railway will auto-populate RAILWAY_PUBLIC_DOMAIN)
# Set this in Railway as: https://${{RAILWAY_PUBLIC_DOMAIN}}
WEBHOOK_URL=https://your-railway-domain.railway.app

# Execution settings
EXECUTIONS_MODE=regular
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# Queue mode (recommended for production)
QUEUE_BULL_REDIS_HOST=${{REDIS_HOST}}
QUEUE_BULL_REDIS_PORT=${{REDIS_PORT}}
QUEUE_BULL_REDIS_PASSWORD=${{REDIS_PASSWORD}}

# Timezone
GENERIC_TIMEZONE=UTC

# Security
N8N_SECURE_COOKIE=true
N8N_JWT_SECRET=your-jwt-secret-here

# Editor settings
N8N_EDITOR_BASE_URL=https://$RAILWAY_PUBLIC_DOMAIN

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Metrics (optional)
N8N_METRICS=false

# External storage (optional)
# N8N_BINARY_DATA_MODE=filesystem
# N8N_DEFAULT_BINARY_DATA_MODE=filesystem
